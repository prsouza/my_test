<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/colorAccent">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccentAlpha"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:color="?attr/colorControlHighlight">
            <corners android:radius="4dp"/>
            <solid android:color="@color/colorWhiteAlpha"/>
        </shape>
    </item>
</ripple>
